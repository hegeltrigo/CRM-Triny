<%= form_with(model: company, local: true) do |form| %>
  <% if company.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(company.errors.count, "error") %> prohibited this company from being saved:</h2>

      <ul>
      <% company.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>



  <div class="form-group form-group-sm col-sm-12">
    <div class="row">
      <%= form.label :name, class: 'col-sm-3 col-form-label text-right' %>
      <div class="col-sm-9">
        <%= form.text_field :name, id: :company_name, class: 'form-control', required: 'required' %>

      </div>
    </div>
  </div>

  <div class="form-group form-group-sm col-sm-12">
    <div class="row">
      <%= form.label :office_location, class: 'col-sm-3 col-form-label text-right' %>
      <div class="col-sm-9">
        <%= form.text_area :office_location, id: :company_office_location, class: 'form-control', required: 'required' %>

      </div>
    </div>
  </div>

  <div class="form-group form-group-sm col-sm-12">
    <div class="row">
      <%= form.label :phone_number, class: 'col-sm-3 col-form-label text-right' %>
      <div class="col-sm-9">
        <%= form.text_field :phone_number, id: :company_phone_number, class: 'form-control', required: 'required' %>

      </div>
    </div>
  </div>

  <div class="float-right">
    <%= link_to 'Back', companies_path, class: 'btn btn-default' %>
    <%= form.submit class: 'btn btn-success' %>
  </div>
<% end %>
