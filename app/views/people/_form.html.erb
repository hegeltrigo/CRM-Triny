<%= form_with(model: person, local: true, class: 'form-horizontal') do |form| %>
  <% if person.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(person.errors.count, "error") %> prohibited this person from being saved:</h2>

      <ul>
      <% person.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group form-group-sm col-sm-12">
    <div class="row">
      <%= form.label :first_name, class: 'col-sm-3 col-form-label text-right' %>
      <div class="col-sm-9">
        <%= form.text_field :first_name, id: :person_first_name, class: 'form-control', required: 'required' %>

      </div>
    </div>
  </div>

  <div class="form-group form-group-sm col-sm-12">
    <div class="row">
      <%= form.label :last_name, class: 'col-sm-3 col-form-label text-right' %>
      <div class="col-sm-9">
        <%= form.text_field :last_name, id: :person_last_name, class: 'form-control', required: 'required' %>

      </div>
    </div>

  </div>

  <!-- <div class="form-group">
    <%= form.label :last_name %>
    <%= form.text_field :last_name, id: :person_last_name, class: 'form-control' %>
  </div> -->

  <div class="form-group form-group-sm col-sm-12">
    <div class="row">
      <%= form.label :email, class: 'col-sm-3 col-form-label text-right' %>
      <div class="col-sm-9">
        <%= form.text_field :email, id: :person_email, class: 'form-control', required: 'required' %>

      </div>
    </div>

  </div>

  <div class="form-group form-group-sm col-sm-12">
    <div class="row">
      <%= form.label :phone_number, class: 'col-sm-3 col-form-label text-right' %>
      <div class="col-sm-9">
        <%= form.text_field :phone_number, id: :person_phone_number, class: 'form-control', required: 'required' %>

      </div>
    </div>

  </div>

  <div class="form-group form-group-sm col-sm-12">
    <div class="row">
      <%= form.label :company_id, class: 'col-sm-3 col-form-label text-right' %>
      <div class="col-sm-9">
        <%= form.select :company_id, options_for_select(Company.all.map{ |c| [c.name, c.id] }, form.object.company_id), {prompt: 'Select company'}, { class: 'form-control company-select'} %>
      </div>
    </div>

  </div>

  <div class="float-right">
    <%= link_to 'Back', people_path, class: 'btn btn-default' %>
    <%= form.submit class: 'btn btn-success' %>
  </div>

<% end %>

<script>
  $( ".company-select" ).select2();

</script>
