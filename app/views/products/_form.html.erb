<%= form_with(model: product, local: true) do |form| %>
  <% if product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


  <div class="form-group form-group-sm col-sm-12">
    <div class="row">
      <%= form.label :title, class: 'col-sm-3 col-form-label text-right' %>
      <div class="col-sm-9">
        <%= form.text_field :title, id: :company_title, class: 'form-control', required: 'required' %>

      </div>
    </div>
  </div>

  <div class="form-group form-group-sm col-sm-12">
    <div class="row">
      <%= form.label :hourly_rate, class: 'col-sm-3 col-form-label text-right' %>
      <div class="col-sm-9">
        <%= form.text_field :hourly_rate, id: :company_hourly_rate, class: 'form-control', required: 'required' %>

      </div>
    </div>
  </div>

  <div class="float-right">
    <%= link_to 'Back', products_path, class: 'btn btn-default' %>
    <%= form.submit class: 'btn btn-success' %>
  </div>
<% end %>
