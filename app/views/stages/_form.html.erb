<%= form_with(model: stage, remote: true) do |f| %>
  <div class="modal-body">
      <div class="form-group">
        <%= f.text_field :title, id: :stage_title, class: 'form-control', placeholder: 'Title', required: 'required' %>
      </div>
      <div class="form-group">
        <%= f.text_area :description, id: :stage_description, class: 'form-control', placeholder: 'Description' %>
      </div>

  </div>
  <div class="modal-footer">
    <div class="actions pull-right">
      <button aria-label="Close" class="btn btn-default" data-dismiss="modal" type="button">Cancel</button>
      <%= f.submit class: 'btn btn-default' %>
    </div>
  </div>
<% end %>
