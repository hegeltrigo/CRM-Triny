<%= form_for user, :url => url, method: method do |form| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group form-group-sm col-sm-12">
    <div class="row">
      <%= form.label :email, class: 'col-sm-3 col-form-label text-right' %>
      <div class="col-sm-9">
        <%= form.email_field :email, id: :user_email, class: 'form-control', required: 'required' %>

      </div>
    </div>
  </div>

  <div class="form-group form-group-sm col-sm-12">
    <div class="row">
      <%= form.label :password, class: 'col-sm-3 col-form-label text-right' %>
      <div class="col-sm-9">
        <%= form.password_field :password, id: :user_password, class: 'form-control', required: 'required' %>

      </div>
    </div>
  </div>

  <div class="form-group form-group-sm col-sm-12">
    <div class="row">
      <%= form.label :password_confirmation, class: 'col-sm-3 col-form-label text-right' %>
      <div class="col-sm-9">
        <%= form.password_field :role, id: :user_password_confirmation, class: 'form-control', required: 'required' %>

      </div>
    </div>
  </div>

  <div class="form-group form-group-sm col-sm-12">
    <div class="row">
      <%= form.label :role, class: 'col-sm-3 col-form-label text-right' %>
      <div class="col-sm-9">
        <%= form.select :role, User.roles.keys.map {|role| [role.titleize,role]}, {}, {id: :user_role, class: 'form-control', required: 'required'} %>

      </div>
    </div>
  </div>

  <div class="float-right">
    <%= link_to 'Back', users_path, class: 'btn btn-default' %>
    <%= form.submit class: 'btn btn-success' %>
  </div>
<% end %>
